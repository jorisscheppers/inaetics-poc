{
  "ignition": {
    "config": {},
    "security": {
      "tls": {}
    },
    "timeouts": {},
    "version": "2.3.0"
  },
  "networkd": {},
  "passwd": {
    "users": [
      {
        "groups": [
          "sudo",
          "docker"
        ],
        "name": "core",
        "sshAuthorizedKeys": [
          "ssh-rsa "
        ]
      }
    ]
  },
  "storage": {
    "files": [
      {
        "filesystem": "root",
        "path": "/etc/hostname",
        "contents": {
          "source": "data:,node3.cluster.local",
          "verification": {}
        },
        "mode": 420
      },
      {
        "filesystem": "root",
        "path": "/etc/rancher/k3s/registries.yaml",
        "contents": {
          "source": "http://infra.cluster.local/configs/k3s/registries.yaml",
          "verification": {}
        },
        "mode": 420
      },
      {
        "filesystem": "root",
        "path": "/etc/rancher/k3s/config.yaml",
        "contents": {
          "source": "http://infra.cluster.local/configs/k3s/config.yaml",
          "verification": {}
        },
        "mode": 420
      },
      {
        "filesystem": "root",
        "path": "/opt/k3s-install.sh",
        "contents": {
          "source": "https://get.k3s.io",
          "verification": {}
        },
        "mode": 511
      }
    ]
  },
  "systemd": {
    "units": [
      {
        "contents": "[Unit]\nDescription=Run K3s script\nWants = network-online.target\nAfter = network.target network-online.target        \nConditionPathExists=/opt/k3s-install.sh\nConditionPathExists=!/opt/bin/k3s\n[Service]\nType=forking\nTimeoutStartSec=180\nRemainAfterExit=yes\nKillMode=process\nEnvironment=\"K3S_TOKEN=heel_geheim_token\"\nEnvironment=\"INSTALL_K3S_EXEC=--cluster-init\"\nExecStart=/usr/bin/sh -c \"/opt/k3s-install.sh\"\n[Install]\nWantedBy=multi-user.target     \n",
        "enabled": true,
        "name": "k3s-install.service"
      },
      {
        "contents": "[Unit]\nDescription=Copy k3s yaml to home directory\nWants=multi-user.target\nAfter=k3s-install.service\nConditionPathExists=/etc/rancher/k3s\n[Service]\nType=oneshot\nExecStart=cp /etc/rancher/k3s/k3s.yaml /home/core \u0026\u0026 chmod 644 /home/core/k3s.yaml\n[Install]\nWantedBy=multi-user.target \n",
        "enabled": true,
        "name": "k3s-yaml-copy.service"
      }
    ]
  }
}
